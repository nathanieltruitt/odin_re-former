<%= form_with model: @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
    <h2><%= pluralize(@user.errors.count, 'error')%> present.</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password%>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, placeholder: "Your email goes here." %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>